<div class="col-sm-8 col-sm-offset-2">
  <h1>商品詳細</h1>

  <div class="col-sm-4">
    <%= attachment_image_tag @item, :image, format: 'jpeg' , fallback: "no_image.jpg" , class: "img-responsive" %>
  </div>

  <div class="col-sm-8">
    <table class="table">
      <tr>
        <td>商品名</td>
        <td>
          <%= @item.name %>
        </td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td>
          <%= @item.description %>
        </td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td>
          <%= @item.genre.name %>
        </td>
      </tr>
      <tr>
        <td>税込み価格（税抜き価格）</td>
        <td>
          <%= (@item.price*1.1).to_i %>（<%= @item.price %>）円
        </td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
          <% if @item.is_sale? %>
          <p>販売中</p>
          <% else %>
          <p>販売停止中</p>
          <% end %>
        </td>
      </tr>
    </table>
    <%= link_to "編集する", edit_admins_item_path , class: 'btn btn-primary' %>
  </div>

</div>