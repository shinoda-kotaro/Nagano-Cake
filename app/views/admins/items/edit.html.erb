<%= form_with model: @item ,url: admins_item_path(@item.id) , method: :patch , local: true do |f| %>
<div class="col-sm-8 col-sm-offset-2">
  <h1>商品編集</h1>

  <div class="col-sm-4">
    <%= attachment_image_tag @item, :image, format: 'jpeg' , fallback: "no_image.jpg" , class: "img-responsive" %>
    <div class="form-group">
      <label>
        <%= f.attachment_field :image %>
      </label>
    </div>
  </div>

  <div class="col-sm-8">
    <table class="table">
      <tr>
        <td>商品名</td>
        <td>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control" , autofocus: true, autocomplete: "商品名" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td>
          <div class="form-group">
            <%= f.text_area :description, rows: "3" ,class: "form-control" ,  autocomplete: "商品説明" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td>
          <div class="form-group">
            <%= f.select :genre_id, @genres.all.collect {|p| [ p.name, p.id ]} , { include_blank: '選択してください' , selected: @item.genre.id}, { class: 'form-control' , required: true } %>
          </div>
        </td>
      </tr>
      <tr>
        <td>税抜き価格</td>
        <td>
          <div class="form-group">
            <%= f.number_field :price, class: "form-control" , autocomplete: "税抜き価格" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
          <div class="form-group">
            <%= f.select :is_sale,  {'販売中': true, '販売停止中': false}, { include_blank: '選択してください' , selected: @item.is_sale}, { class: 'form-control' , required: true } %>
          </div>
        </td>
      </tr>
    </table>

    <div class="form-group">
      <%= f.submit '保存', class: 'btn btn-primary' %>
    </div>
  </div>

</div>
<% end %>