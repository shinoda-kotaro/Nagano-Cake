<div class="col-sm-8 col-sm-offset-2">
  <% if @search_items %>
  <h1>検索結果</h1>
  <table class="table">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
    <% @search_items.each do |item| %>
    <tr>
      <td>
        <%= item.id %>
      </td>
      <td>
        <%= link_to admins_item_path(item.id) do %>
        <%= item.name %>
        <% end %>
      </td>
      <td>
        <%= item.price %>
      </td>
      <td>
        <%= item.genre.name %>
      </td>
      <td>
        <% if item.is_sale? %>
        <p>販売中</p>
        <% else %>
        <p>販売停止中</p>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
  <% end %>
  <h1>商品一覧</h1>
  <%= link_to "商品新規登録", new_admins_item_path , class: "btn btn-primary pull-right" %>
  <table class="table">
    <thead>
      <tr>
        <td>商品ID</td>
        <td>商品名</td>
        <td>税抜き価格</td>
        <td>ジャンル</td>
        <td>ステータス</td>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td>
          <%= item.id %>
        </td>
        <td>
          <%= link_to admins_item_path(item.id) do %>
          <%= item.name %>
          <% end %>
        </td>
        <td>
          <%= item.price %>
        </td>
        <td>
          <%= item.genre.name %>
        </td>
        <td>
          <% if item.is_sale? %>
          <p>販売中</p>
          <% else %>
          <p>販売停止中</p>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>