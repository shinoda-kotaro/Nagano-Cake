<!DOCTYPE html>
<html>

<head>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag    'public', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <% content_for :content do %>

  <header>
    <div class="header">
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
          <div class="navbar-header">
            <%= link_to "LOGO" , root_path , class: "navbar-brand" %>
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-example">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>

          <div class="collapse navbar-collapse" id="navbar-example">
            <ul class="nav navbar-nav navbar-right">
              <% if !end_user_signed_in? %>
              <li class="nav-item">
                <%= link_to "商品一覧", root_path ,class: "btn btn-default navbar-btn" %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_end_user_registration_path ,class: "btn btn-default navbar-btn" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_end_user_session_path ,class: "btn btn-default navbar-btn" %>
              </li>
              <% else %>
              <li class="nav-item">
                <p class="navbar-text">ようこそ <%= current_end_user.first_name %> さん！</p>
              </li>
              <li class="nav-item">
                <%= link_to "マイページ", end_users_mypage_path ,class: "btn btn-default navbar-btn" %>
              </li>
              <li class="nav-item">
                <%= link_to "商品一覧", root_path ,class: "btn btn-default navbar-btn" %>
              </li>
              <li class="nav-item">
                <%= link_to "カート", end_users_mypage_path ,class: "btn btn-default navbar-btn" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_end_user_session_path ,class: "btn btn-default navbar-btn" , method: :delete %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  </header>

  <div class="container">
    <div class="row">
      <div class="mt-5">
        <%= yield %>
      </div>
    </div>
  </div>

  <footer></footer>

  <% end %>
  <%= render template: "layouts/application" %>
</body>

</html>