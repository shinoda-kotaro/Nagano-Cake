<div class="col-sm-3"></div>
<div class="col-sm-6">

  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <table class="table">
    <tr>
      <td>名前</td>
      <td>
        <div class="form-group">
          <%= f.label :first_name , "姓" , class: "sr-only" %>
          <%= f.text_field :first_name, class: "form-control" , autofocus: true, autocomplete: "姓" %>
        </div>
      </td>
      <td>
        <div class="form-group">
          <%= f.label :under_name , "名" , class: "sr-only" %>
          <%= f.text_field :under_name, class: "form-control" , autocomplete: "名" %>
        </div>
      </td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>
        <div class="form-group">
          <%= f.label :kana_first_name , "セイ" , class: "sr-only" %>
          <%= f.text_field :kana_first_name, class: "form-control" ,  autocomplete: "セイ" %>
        </div>
      </td>
      <td>
        <div class="form-group">
          <%= f.label :kana_under_name , "メイ" , class: "sr-only" %>
          <%= f.text_field :kana_under_name, class: "form-control" ,  autocomplete: "メイ" %>
        </div>
      </td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td>
        <div class="form-group">
          <%= f.label :email , class: "sr-only" %>
          <%= f.email_field :email, class: "form-control" , autocomplete: "email" %>
        </div>
      </td>
      <td></td>
    </tr>
    <tr>
      <td>郵便番号（ハイフンなし）</td>
      <td>
        <div class="form-group">
          <%= f.label :postcode , "郵便番号" , class: "sr-only" %>
          <%= f.text_field :postcode, class: "form-control" , autocomplete: "郵便番号" %>
        </div>
      </td>
      <td></td>
    </tr>
    <tr>
      <td>住所</td>
      <td>
        <div class="form-group">
          <%= f.label :address , "住所" , class: "sr-only" %>
          <%= f.text_field :address, class: "form-control" , autocomplete: "住所" %>
        </div>
      </td>
      <td></td>
    </tr>
    <tr>
      <td>電話番号（ハイフンなし）</td>
      <td>
        <div class="form-group">
          <%= f.label :phone_number , "電話番号" , class: "sr-only" %>
          <%= f.text_field :phone_number, class: "form-control" , autocomplete: "電話番号" %>
        </div>
      </td>
      <td></td>
    </tr>
    <tr>
      <td>パスワード（6文字以上）</td>
      <td>
        <div class="form-group">
          <%= f.label :password , "パスワード" , class: "sr-only" %>
          <%= f.password_field :password, class: "form-control" , autocomplete: "new-password" %>
        </div>
      </td>
      <td></td>
    </tr>
    <tr>
      <td>パスワード（確認用）</td>
      <td>
        <div class="form-group">
          <%= f.label :password_confirmation , "パスワード" , class: "sr-only" %>
          <%= f.password_field :password_confirmation, class: "form-control" , autocomplete: "new-password" %>
        </div>
      </td>
      <td></td>
    </tr>
  </table>

  <%= f.hidden_field :is_unsubscribed,  :value => true %>

  <div class="actions">
    <%= f.submit "新規登録" , class: "btn btn-success" %>
  </div>
  <% end %>

</div>