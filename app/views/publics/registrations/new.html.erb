<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :first_name , "姓" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "姓" %>
  </div>

  <div class="field">
    <%= f.label :under_name , "名" %><br />
    <%= f.text_field :under_name,  autocomplete: "名" %>
  </div>

  <div class="field">
    <%= f.label :kana_first_name , "セイ" %><br />
    <%= f.text_field :kana_first_name,  autocomplete: "セイ" %>
  </div>

  <div class="field">
    <%= f.label :kana_under_name , "メイ" %><br />
    <%= f.text_field :kana_under_name,  autocomplete: "メイ" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email,  autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postcode , "郵便番号" %><br />
    <%= f.text_field :postcode,  autocomplete: "郵便番号" %>
  </div>

  <div class="field">
    <%= f.label :address , "住所" %><br />
    <%= f.text_field :address,  autocomplete: "住所" %>
  </div>

  <div class="field">
    <%= f.label :phone_number , "電話番号" %><br />
    <%= f.text_field :phone_number,  autocomplete: "電話番号" %>
  </div>

  <%= f.hidden_field :is_unsubscribed,  :value => true %>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

