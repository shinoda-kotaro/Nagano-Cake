<div class="row">
  <%= form_with model: @address do |f| %>
  <div class="col-sm-8 col-sm-offset-2">
    <h1>配送先登録/一覧</h1>
    <div class="form-group">
      <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
      <%= f.text_field :postcode , class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :address, "住所" %>
      <%= f.text_field :address , class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :name, "宛名" %>
      <%= f.text_field :name , class: "form-control" %>
    </div>
    <%= f.submit "登録する", class: "btn btn-success pull-right" %>
  </div>
  <% end %>
</div>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <table class="table">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
      <% @addresses.each do |address| %>
      <tr>
        <td>
          <%= address.postcode %>
        </td>
        <td>
          <%= address.address %>
        </td>
        <td>
          <%= address.name %>
        </td>
        <td>
          <%= link_to "編集する", edit_address_path(address.id) , class: "btn btn-primary" %>
          <%= link_to "削除する", address_path(address.id) , method: :delete , class: "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>