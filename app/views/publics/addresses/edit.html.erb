<%= form_with model: @address do |f| %>
<div class="col-sm-8 col-sm-offset-1">
  <h1>配送先登録/一覧</h1>
  <div class="form-group">
    <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postcode %>
  </div>
  <div class="form-group">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
  </div>
  <div class="form-group">
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name %>
  </div>
</div>
<div class="col-sm-2">
  <%= f.submit "編集する", class: "btn btn-success" %>
</div>
<% end %>