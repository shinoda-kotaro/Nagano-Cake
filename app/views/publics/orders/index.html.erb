<div class="col-sm-8 col-sm-offset-2">
  <h1>注文履歴一覧</h1>
  <table class="table">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        <%= order.postcode %> <br>
        <%= order.address %> <br>
        <%= order.name %>
      </td>
      <td>
        <% order.order_details.each do |detail| %>
        <%= detail.item.name %> <br>
        <% end %>
      </td>
      <td><%= order.total_price %>円</td>
      <td><%= order.order_status_i18n %></td>
      <td>
        <%= link_to "表示する", order_path(order.id) , class: "btn btn-primary" %>
      </td>
    </tr>
    <% end %>
  </table>
</div>