<div class="col-sm-10 col-sm-offset-1">
  <h1>注文履歴詳細</h1>
  <div class="row">
    <div class="col-sm-8">
      <h2>注文情報</h2>
      <table class="table">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= @order.postcode %> <br>
            <%= @order.address %> <br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td>
            <% if @order.payment_status == "credit" %>
            クレジットカード
            <% elsif @order.payment_status == "bank" %>
            銀行振込
            <% end %>
          </td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td>
            <% if @order.order_status == "waiting_for_payment" %>
            入金待ち
            <% elsif @order.order_status == "confirmed_payment" %>
            入金確認
            <% elsif @order.order_status == "in_production" %>
            製作中
            <% elsif @order.order_status == "preparing_for_shipping" %>
            発送準備中
            <% elsif @order.order_status == "sent" %>
            発送済み
            <% end %>
          </td>
        </tr>
      </table>
    </div>
    <div class="col-sm-4">
      <h2>請求情報</h2>
      <table class="table">
        <tr>
          <th>商品合計</th>
          <td><%= @order.total_price %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_price + @order.postage %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <h2>注文内容</h2>
    <table class="table">
      <tr>
        <th>商品</th>
        <th>単価（税込み）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
      <% @order_details.each do |detail| %>
      <tr>
        <td><%= detail.item.name %></td>
        <td><%= detail.price %></td>
        <td><%= detail.amount %></td>
        <td><%= detail.amount * detail.price %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>