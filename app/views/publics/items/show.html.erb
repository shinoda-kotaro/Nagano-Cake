<div class="col-sm-2"></div>
<div class="col-sm-10">
  <div class="col-sm-5">
    <div class="show_item_image_box">
      <%= attachment_image_tag @item, :image, format: 'jpeg' , fallback: "no_image.jpg" ,class: "show_item_image" %>
    </div>
  </div>
  <div class="col-sm-7">
    <h1><%= @item.name %></h1>
    <div class="item_description">
      <%= @item.description %>
    </div>
    <h3>￥<%= (@item.price * 1.1).to_i %>（税込み）</h3>
    <%= form_for(@cart_item, url: cart_items_path ) do |f| %>

    <div class="row">

      <div class="col-sm-6">

        <%= f.hidden_field :item_id , :value => @item.id %>

        <div class="form-group">
          <%= f.select :amount, @amount , { selected: 1 }, { class: 'form-control' , required: true } %>
        </div>

      </div>

      <div class="col-sm-6">
        <%= f.submit "カートに入れる" , class: "btn btn-primary" %>
      </div>

    </div>

    <% end %>
  </div>
</div>